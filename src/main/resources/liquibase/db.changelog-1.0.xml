<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
	<changeSet id="1.0.1" author="nikita.elokhin">
		<createTable tableName="clients">
			<column name="client_id" type="BIGINT" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="name" type="VARCHAR(100)">
				<constraints nullable="false" unique="true" />
			</column>

		</createTable>
	</changeSet>

	<changeSet id="1.0.2" author="nikita.elokhin">
		<createTable tableName="contacts">
			<column name="contact_id" type="BIGINT" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="contact_type" type="VARCHAR(100)">
				<constraints nullable="false" />
			</column>
			
			<column name="contact_value" type="VARCHAR(100)">
				<constraints nullable="false" />
			</column>

			<column name="client_id" type="VARCHAR(100)">
			</column>

		</createTable>
	</changeSet>

	<changeSet id="1.0.3" author="nikita.elokhin">
		<addForeignKeyConstraint baseColumnNames="client_id"
			baseTableName="contacts"
			constraintName="fk_clients_contacts"
			onDelete="CASCADE"
			onUpdate="RESTRICT"
			referencedColumnNames="client_id"
			referencedTableName="clients" />
	</changeSet>
	
</databaseChangeLog>